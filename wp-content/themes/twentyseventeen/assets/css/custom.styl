@media screen and (min-width 48em)
  .page.page-one-column
  .twentyseventeen-front-page.page-one-column
    .entry-header
      margin-bottom 2em
  .archive.page-one-column:not(.has-sidebar)
    .page-header
      margin-bottom 2em
  
.site-footer
  margin-top 0

  .site-info
    background-color #161616
    border-top 1px solid #333
    float none
    margin-bottom 0
    padding-bottom 3em
    padding-top 2em
    width 100%
    text-align center

    a,
    a:hover,
    a:focus,
    a:active,
    a:visited
      box-shadow none
      font-weight 600
      text-decoration none
  

  .widget-area
    /*padding-bottom 0*/

  .widget_text
    /*padding-bottom 0*/

    .textwidget
      /*display table
      min-height 175px*/
      text-align justify

      .contacts
        /*display table-cell
        vertical-align middle*/
        overflow hidden

        div
          cursor pointer
          display block

          div
            display inline-block

        .mail,
        .phone,
        .linkedin
          margin 3px 0 10px
          overflow hidden

          &:hover,
          &.hover
            .mail--url,
            .phone--url,
            .linkedin--url
              opacity 1
              transform translateX(210px)

        .mail--icon,
        .phone--icon,
        .linkedin--icon
          clear left
          float left

        .mail--url-wrapper
        .phone--url-wrapper
        .linkedin--url-wrapper
          float left
          margin-left 5px
          overflow hidden
          padding 5px 0

        .mail--url
        .phone--url
        .linkedin--url
          left -210px
          opacity 0
          position relative
          transition transform .5s linear, opacity .5s linear

        a,
        a:hover,
        a:focus,
        a:active,
        a:visited
          box-shadow none
          font-weight 600
          outline none
          text-decoration none

        img,
        svg
          vertical-align middle
          height 32px
          width 32px

