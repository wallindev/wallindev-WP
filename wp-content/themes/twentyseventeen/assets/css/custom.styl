.site
  .skip-link
    display none

  // Site Header
  .site-header
    .custom-header
      background-color #161616

      .site-branding
        .custom-logo-link
          padding-right .5em

          .custom-logo
            vertical-align middle
            position relative
            bottom 1px

        .unsplash-badge
          display block
          position fixed
          right 10px
          top calc(100vh - 107px)

          a,
          a:visited
            background-color black
            opacity .2
            color white
            text-decoration none
            padding 4px 6px
            font-family "San Francisco", "Helvetica Neue", Helvetica, Ubuntu, Roboto, Noto, "Segoe UI", Arial, sans-serif
            font-size 12px
            font-weight bold
            line-height 1.2
            display inline-block
            border-radius 3px

            span
              display inline-block
              padding 2px 3px

              svg
                height 12px
                width auto
                position relative
                vertical-align middle
                top -1px
                fill white

          a:hover,
          a:focus,
          a:active
            opacity .3

    .custom-header-media::before
      background linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 0%,
        rgba(0, 0, 0, .3) 75%,
        rgba(0, 0, 0, .3) 100%
      )

    .navigation-top
      z-index 4

      .main-navigation
        .menu-toggle
          font-size 1em

        // Down-arrow to the right of the menu
        .menu-scroll-down
          // display none

        .menu
          .menu-item-has-children
            cursor pointer

            &::before
              display inline-block
              content ""
              height 12px
              width 12px
              position absolute
              bottom 0
              right 1em
              border-color transparent transparent #333 transparent
              border-style solid
              border-width 6px 6px 6px 6px
              margin 0
              padding 0
              opacity 0
              transition opacity 0.5s linear
              z-index 100000

            &::after
              display none

            .sub-menu
              visibility hidden
              left 0.5em
              opacity 0
              transition visibility .5s linear, opacity 0.5s linear

            &:hover
              &::before
                opacity 1
                transition-delay 0s

              &::after
                display none

              .sub-menu
                visibility visible
                opacity 1
                top 100%

    .site-title
      font-weight 600

  // Site Content
  .site-content-contain
    z-index 3

    .site-content,
    #content.site-content
      padding 2em 0 3em

      .entry-content
        .text-image,
        .text-link,
        .text-link:visited
          box-shadow none
          outline none
          transition opacity .2s linear

        .text-link:hover,
        .text-link:focus,
        .text-link:active
          opacity .7

        .content-column.column-left
          float left
          width 58%

          .contacts-about
            overflow hidden

            div
              cursor pointer
              display block

              div
                display inline-block

            .mail,
            .phone,
            .linkedin
              margin 3px 0 10px
              overflow hidden

              &:hover,
              &.hover
                .mail--url,
                .phone--url,
                .linkedin--url
                  opacity 1
                  transform translateX(210px)

            .mail--icon,
            .phone--icon,
            .linkedin--icon
              clear left
              float left

            .mail--url-wrapper
            .phone--url-wrapper
            .linkedin--url-wrapper
              float left
              margin-left 5px
              overflow hidden
              padding 5px 0

            .mail--url
            .phone--url
            .linkedin--url
              left -210px
              opacity 0
              position relative
              transition transform .5s linear, opacity .5s linear

            a,
            a:hover,
            a:focus,
            a:active,
            a:visited
              box-shadow none
              font-weight 600
              outline none
              text-decoration none

            img,
            svg
              vertical-align middle
              height 32px
              width 32px

        .content-column.column-right
          float right
          width 36%

        .content-image
          object-fit cover
          // width 368px
          height 600px
          border-radius 5px
          // box-shadow 5px 5px 2px 1px rgba(34, 34, 34, .9)

        p
          margin 0 0 1em
          text-align justify

        table
          margin 0

        tr
          border-bottom none

          td
            // border-bottom 1px solid #333
            // border-top 1px solid #333
            padding 0

            .crp-wrapper
              #gallery
                div
                  margin-left initial
                  margin-right initial
                  padding-left initial
                  padding-right initial

                .ftg-items
                  overflow hidden
                  padding 5px 0

                  .tile
                    float left
                    font-size 1em
                    height 100%
                    width calc(100% - 10px)
                    margin 0 0 25px 5px
                    box-shadow: 0 0 1px 5px #222
                    transition transform .2s linear, box-shadow .2s linear

                    @media screen and (min-width 20em) // 320px (at 16px base pixel size)
                      font-size 1.1em

                    @media screen and (min-width 30em) // 480px (at 16px base pixel size)
                      font-size .95em

                    @media screen and (min-width 48em) // 768px (at 16px base pixel size)
                      font-size 1.1em
                      width calc(50% - 18px)
                      &:nth-child(even)
                        margin-left 25px

                    @media screen and (min-width 67em) // 1072px (at 16px base pixel size)
                      font-size 1em
                      width calc(33.3% - 20px)
                      &:nth-child(3n-2) // 1,4,7
                        margin-left 5px
                      &:not(:nth-child(3n-2)) // 2,3,5,6 (not 1,4,7)
                        margin-left 25px

                    /*@media screen and (min-width 79em) // 1264px (at 16px base pixel size)
                      font-size .9em
                      width calc(25% - 15px)*/

                    &:hover,
                    &.hover
                      cursor pointer
                      box-shadow 0 10px 1px 5px rgba(34, 34, 34, .7)
                      transform scale(1.02) translateY(-4px)

                      .caption
                        opacity 1

                    .crp-tile-inner
                      position initial
                      left initial
                      top initial
                      width initial
                      height 100%
                      overflow initial

                      *
                        position initial

                      .tile-inner
                        display block
                        height 100%
                        padding 5px 5px 30px
                        position relative

                        .title
                          font-weight 600
                          padding 0 0 10px

                        .crp-item
                          border-radius 5px
                          box-shadow none

                        .description
                          font-size .9em
                          margin-bottom 5px
                          padding 10px 0 0

                        .url
                          bottom 5px
                          font-size .8em
                          position absolute

                        .caption
                          position absolute

  // Site Footer
  .site-footer
    margin-top 0

    .site-info
      background-color #161616
      border-top 1px solid #333
      float none
      margin-bottom 0
      padding-bottom 3em
      padding-top 2em
      width 100%
      text-align center

      a,
      a:hover,
      a:focus,
      a:active,
      a:visited
        box-shadow none
        font-weight 600
        text-decoration none

    .widget-area
      padding-bottom 1em

    .widget_text
      padding-bottom 0

      .textwidget
        text-align justify

        .contact-form
          .nf-form-cont

            .nf-response-msg
              p
                margin 0
                font-size 0.9em
                font-weight 600
                text-align left

            .nf-before-form-content
              display none

            .nf-form-content
              padding 0

              .nf-field-container
                margin-bottom 5px

                .nf-before-field
                  display none

                .nf-field
                  .nf-error
                    .ninja-forms-field,
                    .nf-element
                      border-color input-border !important
                      &:focus
                        border-color input-focus-border !important

                  .nf-pass
                    .ninja-forms-field,
                    .nf-element
                      border-color input-focus-background !important
                      &:focus
                        background input-focus-background !important
                        border-color input-focus-border !important

                  .nf-field-label
                    display none

                  .nf-field-element
                    &::after
                      display none

                    .ninja-forms-field,
                    .nf-element
                      color input-color
                      font-size 1em
                      padding 4px 8px
                      &:focus
                        background input-focus-background !important
                        border-color input-focus-border !important

                    input:not([type=button])
                      color input-color
                      height initial
                      &:focus
                        background input-focus-background !important
                        border-color input-focus-border !important

                    textarea
                      color input-color
                      height 63px
                      &:focus
                        background input-focus-background !important
                        border-color input-focus-border !important

                    button,
                    input[type=button],
                    input[type=submit] {
                      background input-focus-background
                      // color input-color
                      float right
                      font-weight 600
                      height initial
                      padding 8px
                    }
                    button:hover,
                    input[type=button]:hover,
                    input[type=submit]:hover {
                      background #4c4c4c
                      // color input-color
                    }
                    button[disabled],
                    input[type=button][disabled],
                    input[type=submit][disabled] {
                      // color input-color
                      cursor default
                    }
                    button[disabled]:hover,
                    input[type=button][disabled]:hover,
                    input[type=submit][disabled]:hover {
                      background input-focus-background
                      // color input-color
                    }

                    /*
                     * Hack for overriding Chrome user agent autofill
                     * Left the 'previewed' as-is so the user still sees the autofill mechanism,
                     * but after user selects suggested value the style reverts to "normal"
                     */
                    // input:-internal-autofill-previewed,
                    input:-internal-autofill-selected,
                    // textarea:-internal-autofill-previewed,
                    textarea:-internal-autofill-selected,
                    // select:-internal-autofill-previewed,
                    select:-internal-autofill-selected,
                    /* input:-webkit-autofill,
                    input:-webkit-autofill:hover, 
                    input:-webkit-autofill:focus,
                    textarea:-webkit-autofill,
                    textarea:-webkit-autofill:hover,
                    textarea:-webkit-autofill:focus,
                    select:-webkit-autofill,
                    select:-webkit-autofill:hover,
                    select:-webkit-autofill:focus */
                      -webkit-text-fill-color input-color
                      -webkit-box-shadow 0 0 0px 1000px input-background inset
                      // transition background-color 5000s ease-in-out 0s
                      background-color input-background !important
                      // background-image none !important
                      color input-color !important

                .nf-after-field
                  display none

            .nf-after-form-content
              display none

        .contacts-footer
          display none
          overflow hidden

          div
            cursor pointer
            display block

            div
              display inline-block

          .mail,
          .phone,
          .linkedin
            margin 3px 0 10px
            overflow hidden

            &:hover,
            &.hover
              .mail--url,
              .phone--url,
              .linkedin--url
                opacity 1
