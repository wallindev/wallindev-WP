            left -210px
            opacity 0
            position relative
            transition transform .5s linear, opacity .5s linear

          a,
          a:hover,
          a:focus,
          a:active,
          a:visited
            box-shadow none
            font-weight 600
            outline none
            text-decoration none

          img,
          svg
            vertical-align middle
            height 32px
            width 32px

        .about-work
          lhCrop(1.6)

