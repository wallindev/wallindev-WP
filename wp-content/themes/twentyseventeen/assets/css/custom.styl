@media screen and (min-width 30em)
  .page-one-column
    .panel-content
      .wrap
        max-width 1000px

.page.page-one-column:not(.twentyseventeen-front-page)
  .site-header
    .custom-header
      .site-branding
        .unsplash-badge
          display none

  #primary
    max-width 1000px

    .entry-header
      .entry-title
        font-size 32px
        font-weight 600
        text-align center
        text-transform capitalize


.site-header
  .custom-header
    /*background-color #2e353e*/
    background-color #161616
    /*margin-bottom 72px*/

    .site-branding
      .custom-logo-link
        padding-right .5em

        .custom-logo
          vertical-align middle
          position relative
          bottom 1px

      .unsplash-badge
        display block
        position fixed
        // bottom 82px
        right 10px
        top calc(100vh - 107px)

        a,
        a:visited
          background-color black
          opacity .2
          color white
          text-decoration none
          padding 4px 6px
          font-family "San Francisco", "Helvetica Neue", Helvetica, Ubuntu, Roboto, Noto, "Segoe UI", Arial, sans-serif
          font-size 12px
          font-weight bold
          line-height 1.2
          display inline-block
          border-radius 3px

          span
            display inline-block
            padding 2px 3px

            svg
              height 12px
              width auto
              position relative
              vertical-align middle
              top -1px
              fill white

        a:hover,
        a:focus,
        a:active
          opacity .3

  .custom-header-media:before
    /*display none*/

  .navigation-top
    z-index 4
    
    .main-navigation
      .menu-toggle
        font-size 1em

      .menu-scroll-down
        display none

      .menu

        .menu-item-has-children
          cursor pointer

          &::before,
          &::after
            display block
            opacity 0
            transition opacity 0.5s linear

          .sub-menu
            visibility hidden
            left 0.5em
            opacity 0
            // top -999px
            transition visibility 1s linear 0.5s, opacity 0.5s linear

          &:hover

            &::before,
            &::after
              opacity 1
              transition-delay 0s

            .sub-menu
              visibility visible
              opacity 1
              // top 100%
              // transition top 1s linear 0.5s
              transition-delay 0s

  .site-title
    font-weight 600

/* Front Page */
.twentyseventeen-front-page.has-header-image
  .site-header
    .site-branding
      padding 2em 0

/* All other pages (not Front Page) */
.has-header-image:not(.twentyseventeen-front-page):not(.home)
  .site-header
    .site-branding
      padding 3em 0

  .site-content
    .wrap
      padding 0 40px
      // padding-left 2.8em
      // padding-right 2.8em

.site-content-contain
  z-index 3

  .site-content
    // background-color #161616

    /*.entry-header
      .entry-title
        text-align center*/
    
    .entry-content
      tr
        border-bottom none

        td
          border-bottom 1px solid #333
          border-top 1px solid #333
          padding 1em 0
          // border-top-color rgba(238,238,238,.3)

          .crp-wrapper
            #gallery
              div
                margin-left initial
                margin-right initial
                padding-left initial
                padding-right initial

              .ftg-items
                // height 400px
                overflow hidden
                padding 20px 0

                .tile
                  float left
                  font-size 1em
                  height 100%
                  // height 238px
                  width calc(100% - 10px)
                  margin 0 0 25px 5px
                  box-shadow: 0 0 1px 5px #222;
                  transition transform .2s linear, box-shadow .2s linear

                  @media screen and (min-width 20em) // 320px (at 16px base pixel size)
                    font-size 1.1em

                  @media screen and (min-width 30em) // 480px (at 16px base pixel size)
                    font-size .95em

                  @media screen and (min-width 48em) // 768px (at 16px base pixel size)
                    font-size 1.1em
                    width calc(50% - 18px)
                    &:nth-child(even)
                      margin-left 25px

                  @media screen and (min-width 67em) // 1072px (at 16px base pixel size)
                    font-size 1em
                    width calc(33.3% - 20px)
                    &:nth-child(3n-2) // 1,4,7
                      margin-left 5px
                    &:not(:nth-child(3n-2)) // 2,3,5,6 (not 1,4,7)
                      margin-left 25px

                  /*@media screen and (min-width 79em) // 1264px (at 16px base pixel size)
                    font-size .9em
                    width calc(25% - 15px)*/

                  &:hover,
                  &.hover
                    cursor pointer
                    box-shadow 0 10px 1px 5px rgba(34, 34, 34, .7)
                    transform translateY(-4px)
                    
                    .caption
                      opacity 1

                  .crp-tile-inner
                    position initial
                    left initial
                    top initial
                    width initial
                    height 100%
                    overflow initial

                    *
                      position initial

                    .tile-inner
                      display block
                      height 100%
                      padding 5px 5px 30px
                      position relative

                      .title
                        font-weight 600
                        padding 0 0 10px

                      .crp-item
                        box-shadow none

                      .description
                        font-size .9em
                        margin-bottom 5px
                        padding 10px 0 0

                      .url
                        bottom 5px
                        font-size .8em
                        position absolute

                      .caption
                        position absolute

